<% layout('/layouts/boilerplate')%>
    <div id="cluster-map"></div>
    <h1>All Campgrounds</h1>
    <% for (let cg of cgs) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=cg.images[0].url%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=cg.name%>
                        </h5>
                        <p class="card-text">
                            <%=cg.description%>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%=cg.location%>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%=cg._id%>"">View</a>
                </div>
            </div>
        </div>
    </div>
<% } %>
